{
  "name": "@bluedotrobots/common-ts",
  "version": "1.0.222",
  "description": "Shared TypeScript code between frontend and backend",
  "files": [
    "dist/src/**/*"
  ],
  "exports": {
    "./types/*": {
      "types": "./dist/src/types/*.d.ts",
      "default": "./dist/src/types/*.js"
    },
    "./types/*/index": {
      "types": "./dist/src/types/*/index.d.ts", 
      "default": "./dist/src/types/*/index.js"
    },
    "./types/*/*": {
      "types": "./dist/src/types/*/*.d.ts",
      "default": "./dist/src/types/*/*.js"
    },
    "./parsers": {
      "types": "./dist/src/parsers/cpp-parser.d.ts",
      "default": "./dist/src/parsers/cpp-parser.js"
    },
    "./message-builder": {
      "types": "./dist/src/message-builder/message-builder.d.ts",
      "default": "./dist/src/message-builder/message-builder.js"
    },
    "./protocol": {
      "types": "./dist/src/message-builder/protocol.d.ts",
      "default": "./dist/src/message-builder/protocol.js"
    }
  },
  "scripts": {
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit --project tsconfig.test.json",
    "build": "rimraf dist && tsc --project tsconfig.json",
    "validate": "npm run lint && npm run type-check && npm run test",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/bluedotrobots/common-ts/issues"
  },
  "homepage": "https://github.com/bluedotrobots/common-ts#readme",
  "devDependencies": {
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluedotrobots/common-ts.git"
  },
  "dependencies": {
    "blockly": "^12.1.0"
  }
}
